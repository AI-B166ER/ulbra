algoritmo "semnome"
var
   n1, n2, n3, p1, p2, p3, r: real
inicio
      escreva("Nota 1: ")
      leia(n1)
      escreva("Peso 1: ")
      leia(p1)
      escreva("Nota 2: ")
      leia(n2)
      escreva("Peso 2: ")
      leia(p2)
      escreva("Nota 3: ")
      leia(n3)
      escreva("Peso 3: ")
      leia(p3)
      
      r <- (n1 * p1 + n2 * p2 + n3 * p3)/(p1 + p2 + p3)

      escreva("resultado: ",r)

fimalgoritmo

